{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": ["app/**/*", "constants/**/*", "types/**/*"],
  "exclude": ["node_modules", "build"]
}
